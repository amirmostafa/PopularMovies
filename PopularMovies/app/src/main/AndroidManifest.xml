<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.amir.popularmovies" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MovieDetails"
            android:label="@string/title_activity_movie_details"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.amir.popularmovies.MainActivity" />
        </activity>
        <activity
            android:name=".MovieDetail"
            android:label="@string/title_activity_movie_detail"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.amir.popularmovies.MainActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.amir.popularmovies.MainActivity" />
        </activity>
        <activity
            android:name=".ReviewsActivity"
            android:label="@string/title_activity_reviews"
            android:parentActivityName=".MovieDetails" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.amir.popularmovies.MovieDetails" />
        </activity>
        <activity
            android:name=".trailerActivity"
            android:label="@string/title_activity_trailer"
            android:parentActivityName=".MovieDetails" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.amir.popularmovies.MovieDetails" />
        </activity>
    </application>

</manifest>
